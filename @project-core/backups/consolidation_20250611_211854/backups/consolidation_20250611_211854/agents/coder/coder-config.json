      "refactoring": {
        "code_restructuring": true,
        "performance_optimization": true,
        "pattern_implementation": true,
        "legacy_modernization": true
      },
      "debugging": {
        "error_diagnosis": true,
        "root_cause_analysis": true,
        "fix_implementation": true,
        "testing_validation": true
      },
      "quality_assurance": {
        "code_review": true,
        "testing": true,
        "documentation": true,
        "best_practices": true
      }
    },
    "tech_stack_expertise": {
