        "validation_points": [
          "code_quality_check",
          "functionality_test",
          "performance_validation"
        ]
      },
      "bug_fix": {
        "steps": [
          "issue_reproduction",
          "root_cause_analysis", 
          "fix_implementation",
          "testing",
          "verification"
        ],
        "validation_points": [
          "fix_effectiveness",
          "regression_testing",
          "performance_impact"
        ]
      },
      "refactoring": {
        "steps": [
          "code_analysis",
          "refactoring_plan",
