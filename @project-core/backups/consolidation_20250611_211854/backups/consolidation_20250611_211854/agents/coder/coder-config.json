      "secondary_domains": [
        "testing",
        "deployment",
        "code_review",
        "documentation"
      ],
      "complexity_range": {
        "min": 5,
        "max": 10,
        "optimal": [6, 8]
      }
    },
    "mcp_integration": {
      "required_servers": [
        "str-replace-editor",
        "save-file", 
        "view",
        "diagnostics",
        "launch-process"
      ],
      "optional_servers": [
        "codebase-retrieval",
        "github-api",
        "read-terminal"
      ],
      "tool_permissions": {
        "file_operations": ["str-replace-editor", "save-file", "view", "remove-files"],
        "code_analysis": ["codebase-retrieval", "diagnostics"],
        "execution": ["launch-process", "read-terminal", "write-process"],
