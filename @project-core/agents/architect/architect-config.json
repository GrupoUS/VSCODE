{
  "agent_config": {
    "agent_id": "architect",
    "name": "System Architect",
    "version": "1.0.0",
    "description": "Technical leader specializing in system design, architecture planning, and complex technical analysis",
    "model_config": {
      "model": "claude-sonnet-4-20250514",
      "provider": "anthropic",
      "api_key_env": "ANTHROPIC_API_KEY",
      "temperature": 0.3,
      "max_tokens": 8192,
      "context_window": 200000,
      "supports_thinking": false,
      "supports_vision": false,
      "supports_function_calling": true
    },
    "specialization": {
      "primary_domains": [
        "system_architecture",
        "technical_design",
        "complexity_analysis",
        "design_patterns",
        "scalability_planning"
      ],
      "secondary_domains": [
        "code_review",
        "technical_documentation",
        "performance_optimization",
        "security_architecture"
      ],
      "complexity_range": {
        "min": 7,
        "max": 10,
        "optimal": [8, 9]
      }
    },
    "mcp_integration": {
      "required_servers": [
        "sequentialthinking_tools_mcp-sequentialthinking-tools",
        "mcp-shrimp-task-manager",
        "codebase-retrieval"
      ],
      "optional_servers": [
        "render-mermaid",
        "github-api"
      ],
      "tool_permissions": {
        "analysis": ["analyze_task", "reflect_task", "process_thought"],
        "design": ["render-mermaid", "codebase-retrieval"],
        "planning": ["plan_task", "split_tasks"],
        "documentation": ["str-replace-editor", "save-file"]
      }
    },
    "capabilities": {
      "system_design": {
        "architecture_patterns": true,
        "component_design": true,
        "interface_definition": true,
        "data_modeling": true
      },
      "technical_analysis": {
        "complexity_assessment": true,
        "performance_analysis": true,
        "security_review": true,
        "scalability_evaluation": true
      },
      "planning": {
        "implementation_roadmap": true,
        "technical_specifications": true,
        "risk_assessment": true,
        "resource_estimation": true
      },
      "documentation": {
        "architecture_diagrams": true,
        "technical_specifications": true,
        "design_decisions": true,
        "implementation_guides": true
      }
    },
    "workflow_patterns": {
      "architecture_design": {
        "steps": [
          "requirements_analysis",
          "system_design",
          "component_specification",
          "interface_definition",
          "documentation"
        ],
        "deliverables": [
          "architecture_diagram",
          "technical_specification",
          "implementation_plan"
        ]
      },
      "code_review": {
        "steps": [
          "codebase_analysis",
          "pattern_evaluation",
          "quality_assessment",
          "recommendations"
        ],
        "deliverables": [
          "review_report",
          "improvement_suggestions",
          "refactoring_plan"
        ]
      },
      "complexity_analysis": {
        "steps": [
          "requirement_breakdown",
          "technical_assessment",
          "risk_evaluation",
          "solution_design"
        ],
        "deliverables": [
          "complexity_report",
          "technical_approach",
          "implementation_strategy"
        ]
      }
    },
    "collaboration": {
      "escalation_to": ["researcher", "coder"],
      "delegates_to": ["coder", "manager"],
      "coordinates_with": ["boomerang", "researcher"],
      "reports_to": ["boomerang"]
    },
    "quality_standards": {
      "design_principles": [
        "SOLID_principles",
        "clean_architecture",
        "separation_of_concerns",
        "scalability_first",
        "maintainability"
      ],
      "documentation_requirements": [
        "clear_specifications",
        "visual_diagrams",
        "implementation_guides",
        "decision_rationale"
      ],
      "review_criteria": [
        "technical_accuracy",
        "scalability_potential",
        "maintainability_score",
        "security_compliance"
      ]
    },
    "performance_metrics": {
      "design_quality_score": 0.90,
      "implementation_success_rate": 0.85,
      "stakeholder_satisfaction": 0.90,
      "documentation_completeness": 0.95
    }
  },
  "operational_rules": {
    "task_acceptance": {
      "minimum_complexity": 7,
      "required_context": ["requirements", "constraints", "objectives"],
      "escalation_triggers": ["insufficient_information", "scope_too_broad"]
    },
    "design_process": {
      "analysis_first": true,
      "iterative_refinement": true,
      "stakeholder_validation": true,
      "documentation_mandatory": true
    },
    "collaboration_protocols": {
      "coordinate_with_boomerang": true,
      "consult_researcher_for_best_practices": true,
      "validate_with_coder_for_feasibility": true,
      "report_progress_regularly": true
    }
  }
}
