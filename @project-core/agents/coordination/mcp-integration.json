  "server_configurations": {
    "sequentialthinking_tools_mcp-sequentialthinking-tools": {
      "description": "Advanced thinking and problem decomposition",
      "agents_using": ["boomerang", "architect"],
      "configuration": {
        "max_thoughts": 10,
        "enable_branching": true,
        "enable_revision": true
      }
    },
    "mcp-shrimp-task-manager": {
      "description": "Comprehensive task management system",
      "agents_using": ["boomerang", "architect", "manager"],
      "configuration": {
        "task_folder": "@project-core/tasks/",
        "enable_validation": true,
        "auto_backup": true
      }
    },
    "codebase-retrieval": {
      "description": "Intelligent code analysis and retrieval",
      "agents_using": ["architect", "coder"],
      "configuration": {
        "index_path": ".augment/",
        "max_results": 20,
        "include_context": true
      }
    },
    "github-api": {
      "description": "GitHub integration for project management",
      "agents_using": ["manager", "coder"],
      "configuration": {
        "default_repo": "current",
        "enable_webhooks": false,
        "auto_sync": true
      }
    }
  },
  "tool_access_matrix": {
    "high_privilege": {
      "tools": ["str-replace-editor", "save-file", "launch-process", "github-api"],
      "agents": ["coder", "manager"],
      "restrictions": ["require_validation", "audit_log"]
    },
    "medium_privilege": {
      "tools": ["view", "diagnostics", "codebase-retrieval", "render-mermaid"],
      "agents": ["architect", "researcher", "executor"],
      "restrictions": ["read_only_preferred"]
    },
    "low_privilege": {
      "tools": ["web-search", "web-fetch", "think"],
      "agents": ["all"],
      "restrictions": ["none"]
    }
  },
  "coordination_protocols": {
    "tool_sharing": {
      "enabled": true,
      "queue_management": true,
      "priority_system": true,
      "conflict_resolution": "coordinator_decides"
    },
    "resource_management": {
      "max_concurrent_operations": 5,
      "timeout_handling": "graceful_degradation",
      "error_recovery": "automatic_retry"
    },
    "monitoring": {
      "tool_usage_tracking": true,
      "performance_metrics": true,
      "error_logging": true,
      "success_rate_monitoring": true
    }
  }
