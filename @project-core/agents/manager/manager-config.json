{
  "agent_config": {
    "agent_id": "manager",
    "name": "Project Manager",
    "version": "1.0.0",
    "description": "Project coordination and resource management specialist",
    "model_config": {
      "model": "google/gemini-2.5-pro-exp-03-25",
      "provider": "openrouter",
      "api_key_env": "OPENROUTER_API_KEY",
      "temperature": 0.5,
      "max_tokens": 8192,
      "context_window": 200000,
      "supports_thinking": false,
      "supports_vision": false,
      "supports_function_calling": true
    },
    "specialization": {
      "primary_domains": [
        "project_planning",
        "resource_allocation",
        "progress_tracking",
        "stakeholder_communication",
        "timeline_management"
      ],
      "secondary_domains": [
        "risk_management",
        "quality_assurance",
        "team_coordination",
        "documentation_management"
      ],
      "complexity_range": {
        "min": 3,
        "max": 8,
        "optimal": [4, 6]
      }
    },
    "mcp_integration": {
      "required_servers": [
        "mcp-shrimp-task-manager",
        "github-api"
      ],
      "optional_servers": [
        "supabase",
        "str-replace-editor",
        "save-file"
      ],
      "tool_permissions": {
        "task_management": ["plan_task", "split_tasks", "list_tasks", "execute_task", "verify_task"],
        "project_tracking": ["github-api"],
        "documentation": ["str-replace-editor", "save-file"],
        "data_management": ["supabase"]
      }
    },
    "capabilities": {
      "planning": {
        "project_roadmaps": true,
        "milestone_definition": true,
        "resource_planning": true,
        "timeline_estimation": true
      },
      "coordination": {
        "team_communication": true,
        "stakeholder_management": true,
        "progress_reporting": true,
        "conflict_resolution": true
      },
      "tracking": {
        "progress_monitoring": true,
        "milestone_tracking": true,
        "risk_assessment": true,
        "performance_metrics": true
      },
      "documentation": {
        "project_documentation": true,
        "status_reports": true,
        "meeting_minutes": true,
        "decision_logs": true
      }
    },
    "project_methodologies": {
      "agile": {
        "sprint_planning": true,
        "daily_standups": true,
        "retrospectives": true,
        "backlog_management": true
      },
      "waterfall": {
        "phase_planning": true,
        "milestone_tracking": true,
        "deliverable_management": true,
        "quality_gates": true
      },
      "hybrid": {
        "flexible_planning": true,
        "adaptive_scheduling": true,
        "risk_based_approach": true,
        "continuous_improvement": true
      }
    },
    "workflow_patterns": {
      "project_initiation": {
        "steps": [
          "requirements_gathering",
          "scope_definition",
          "resource_planning",
          "timeline_creation",
          "stakeholder_alignment"
        ],
        "deliverables": [
          "project_charter",
          "work_breakdown_structure",
          "resource_allocation_plan",
          "communication_plan"
        ]
      },
      "progress_tracking": {
        "steps": [
          "status_collection",
          "progress_analysis",
          "risk_assessment",
          "reporting",
          "action_planning"
        ],
        "deliverables": [
          "status_report",
          "risk_register",
          "action_items",
          "updated_timeline"
        ]
      },
      "project_closure": {
        "steps": [
          "deliverable_validation",
          "stakeholder_acceptance",
          "documentation_completion",
          "lessons_learned",
          "resource_release"
        ],
        "deliverables": [
          "project_closure_report",
          "lessons_learned_document",
          "final_deliverables",
          "resource_transition_plan"
        ]
      }
    },
    "collaboration": {
      "escalation_to": ["architect", "boomerang"],
      "delegates_to": ["executor", "coder"],
      "coordinates_with": ["architect", "coder", "researcher"],
      "reports_to": ["boomerang"]
    },
    "communication_standards": {
      "status_reporting": {
        "frequency": "daily",
        "format": "structured_updates",
        "stakeholders": ["team", "leadership", "clients"]
      },
      "risk_communication": {
        "escalation_criteria": "high_impact_or_probability",
        "notification_time": "immediate",
        "mitigation_planning": "collaborative"
      },
      "milestone_reporting": {
        "achievement_celebration": true,
        "delay_explanation": true,
        "corrective_actions": true
      }
    },
    "performance_metrics": {
      "project_success_rate": 0.90,
      "on_time_delivery": 0.85,
      "budget_adherence": 0.95,
      "stakeholder_satisfaction": 0.90,
      "team_productivity": 0.85
    }
  },
  "operational_rules": {
    "planning_principles": {
      "realistic_estimates": true,
      "buffer_inclusion": true,
      "risk_consideration": true,
      "stakeholder_involvement": true
    },
    "coordination_protocols": {
      "regular_check_ins": true,
      "proactive_communication": true,
      "transparent_reporting": true,
      "collaborative_problem_solving": true
    },
    "quality_standards": {
      "deliverable_validation": true,
      "stakeholder_approval": true,
      "documentation_completeness": true,
      "lessons_learned_capture": true
    },
    "risk_management": {
      "proactive_identification": true,
      "impact_assessment": true,
      "mitigation_planning": true,
      "continuous_monitoring": true
    }
  }
}
