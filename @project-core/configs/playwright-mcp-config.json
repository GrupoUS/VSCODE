{
  "browser": {
    "browserName": "chromium",
    "isolated": false,
    "userDataDir": "@project-core/automation/playwright-profile",
    "launchOptions": {
      "channel": "chrome",
      "headless": false,
      "executablePath": null,
      "slowMo": 100,
      "devtools": false,
      "args": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ]
    },
    "contextOptions": {
      "viewport": {
        "width": 1280,
        "height": 720
      },
      "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
      "locale": "pt-BR",
      "timezoneId": "America/Sao_Paulo",
      "permissions": ["geolocation", "notifications"],
      "geolocation": {
        "latitude": -23.5505,
        "longitude": -46.6333
      },
      "colorScheme": "light",
      "reducedMotion": "reduce",
      "forcedColors": "none",
      "acceptDownloads": true,
      "ignoreHTTPSErrors": true,
      "bypassCSP": false,
      "javaScriptEnabled": true,
      "offline": false,
      "recordHar": {
        "path": "@project-core/automation/playwright-output/network.har",
        "mode": "minimal"
      },
      "recordVideo": {
        "dir": "@project-core/automation/playwright-output/videos",
        "size": {
          "width": 1280,
          "height": 720
        }
      },
      "storageState": "@project-core/automation/playwright-storage-state.json"
    }
  },
  "server": {
    "port": 8931,
    "host": "localhost"
  },
  "capabilities": [
    "core",
    "tabs",
    "pdf",
    "history",
    "wait",
    "files",
    "install",
    "testing"
  ],
  "vision": true,
  "outputDir": "@project-core/automation/playwright-output",
  "network": {
    "allowedOrigins": [
      "https://grupous.com",
      "https://*.grupous.com",
      "https://localhost:*",
      "http://localhost:*",
      "https://httpbin.org",
      "https://example.com",
      "https://github.com",
      "https://api.github.com",
      "https://supabase.com",
      "https://*.supabase.co",
      "https://figma.com",
      "https://api.figma.com"
    ],
    "blockedOrigins": [
      "https://ads.google.com",
      "https://doubleclick.net",
      "https://googletagmanager.com",
      "https://google-analytics.com",
      "https://facebook.com/tr",
      "https://connect.facebook.net"
    ]
  },
  "noImageResponses": false,
  "timeouts": {
    "navigation": 30000,
    "action": 10000,
    "expect": 5000
  },
  "retries": {
    "default": 2,
    "flaky": 3
  },
  "screenshots": {
    "mode": "only-on-failure",
    "fullPage": true,
    "quality": 90,
    "type": "png"
  },
  "trace": {
    "mode": "on-first-retry",
    "screenshots": true,
    "snapshots": true,
    "sources": true
  },
  "testGeneration": {
    "enabled": true,
    "outputDir": "@project-core/automation/generated-tests",
    "framework": "playwright",
    "language": "typescript"
  },
  "security": {
    "allowUnsafeEval": false,
    "allowUnsafeInline": false,
    "strictTransportSecurity": true,
    "contentSecurityPolicy": true
  },
  "performance": {
    "cpuThrottling": 1,
    "networkThrottling": "none",
    "cacheEnabled": true,
    "serviceWorkersEnabled": false
  },
  "accessibility": {
    "snapshots": true,
    "colorContrast": true,
    "keyboardNavigation": true,
    "screenReader": true
  },
  "grupous": {
    "projectName": "GRUPO US VIBECODE SYSTEM",
    "version": "3.1",
    "environment": "development",
    "integrations": {
      "taskmaster": true,
      "figma": true,
      "supabase": true,
      "sequential_thinking": true
    },
    "customSelectors": {
      "dataTestId": "[data-testid='{}']",
      "ariaLabel": "[aria-label='{}']",
      "role": "[role='{}']",
      "placeholder": "[placeholder='{}']"
    },
    "baseUrls": {
      "development": "http://localhost:3000",
      "staging": "https://staging.grupous.com",
      "production": "https://grupous.com"
    }
  }
}
