{
  "$schema": "https://json.schemastore.org/vscode-settings",
  "description": "GRUPO US VIBECODE SYSTEM V4.0 - Unified VS Code Settings (MANDATORY)",

  "// === VIBECODE SYSTEM V4.0 IDENTIFICATION ===": "",
  "grupous.vibecode.version": "4.0",
  "grupous.vibecode.environment": "vscode-unified",
  "grupous.vibecode.masterRule": "@project-core/memory/master_rule.md",
  "grupous.vibecode.constitution": "@project-core/rules/00-vibecode-system-v4-master.md",
  "grupous.vibecode.syncRequired": true,
  "grupous.vibecode.complianceLevel": "mandatory",

  "// === CORE EDITOR SETTINGS (UNIFIED) ===": "",
  "git.autofetch": "all",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",

  "// === AUGMENT CODE INTEGRATION (MANDATORY) ===": "",
  "augment.enabled": true,
  "augment.masterRuleIntegration": true,
  "augment.memoryBankPath": "@project-core/memory/",
  "augment.rulesPath": "@project-core/rules/",
  "augment.complianceCheck": "strict",
  "augment.chat.contextAware": true,
  "augment.nextEdit.memoryIntegration": true,
  "augment.instructions.ruleCompliance": true,
  "augment.completions.patternAware": true,

  "// === AUGMENT MCP INTEGRATION (UNIFIED V4.0) ===": "",
  "augment.mcp.enabled": true,
  "augment.mcp.configPath": "@project-core/configs/mcp-master-unified.json",
  "augment.mcp.autoStart": true,
  "augment.mcp.healthCheck": true,
  "augment.mcp.autoRestart": true,
  "augment.mcp.memoryIntegration": true,
  "augment.mcp.unifiedSystem": true,
  "augment.mcp.crossEnvironmentSync": true,
  "augment.mcp.servers.thinkMcp": true,
  "augment.mcp.servers.sequentialThinking": true,
  "augment.mcp.servers.shrimpTaskManager": true,

  "// === TYPESCRIPT/JAVASCRIPT (UNIFIED STANDARDS) ===": "",
  "typescript.preferences.quoteStyle": "double",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "double",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "// === FORMATTING (UNIFIED) ===": "",
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.printWidth": 80,

  "// === ESLINT INTEGRATION (UNIFIED) ===": "",
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  "// === FILES AND WORKSPACE (UNIFIED) ===": "",
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true
  },

  "// === TERMINAL (UNIFIED) ===": "",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    }
  },
  "terminal.integrated.cwd": "${workspaceFolder}",

  "// === EXTENSIONS (MANDATORY FOR UNIFIED ENVIRONMENT) ===": "",
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,

  "// === INTELLISENSE AND SUGGESTIONS (UNIFIED) ===": "",
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  "// === DEBUGGING (UNIFIED) ===": "",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "on",
  "debug.showBreakpointsInOverviewRuler": true,

  "// === SEARCH (UNIFIED) ===": "",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  "// === CURSOR AI COMPATIBILITY (CROSS-ENVIRONMENT) ===": "",
  "cursor.compatibility.enabled": true,
  "cursor.sync.memoryBank": "@project-core/memory/",
  "cursor.sync.rules": "@project-core/rules/",
  "cursor.handoff.protocol": "unified-v4",

  "// === MCP INTEGRATION (UNIFIED V4.0) ===": "",
  "mcp.enabled": true,
  "mcp.configPath": "@project-core/configs/mcp-master-unified.json",
  "mcp.autoStart": true,
  "mcp.healthCheck": true,
  "mcp.autoRestart": true,
  "mcp.sequentialThinking.autoActivate": "complexity >= 7",
  "mcp.shrimpTaskManager.enabled": true,
  "mcp.memoryIntegration": true,
  "mcp.unifiedSystem": true,
  "mcp.crossEnvironmentSync": true,
  "mcp.serverDetection": "automatic",

  "// === FILE ASSOCIATIONS (UNIFIED) ===": "",
  "files.associations": {
    "*.cursorrules": "markdown",
    ".augmentignore": "ignore",
    ".augment-guidelines": "markdown",
    "*.mdc": "markdown",
    "master_rule.md": "markdown"
  },

  "// === JSON SCHEMA VALIDATION (UNIFIED) ===": "",
  "json.schemas": [
    {
      "fileMatch": ["settings.json"],
      "url": "./@project-core/configs/vscode-settings-schema.json"
    },
    {
      "fileMatch": ["unified-dev-environment-config.json"],
      "url": "./@project-core/configs/unified-config-schema.json"
    },
    {
      "fileMatch": ["mcp-master-unified.json"],
      "url": "./@project-core/configs/mcp-config-schema.json"
    }
  ],

  "// === WORKSPACE TRUST (UNIFIED) ===": "",
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.startupPrompt": "never",

  "// === PERFORMANCE (UNIFIED) ===": "",
  "typescript.disableAutomaticTypeAcquisition": false,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,

  "// === VIBECODE SYSTEM V4.0 COMPLIANCE MARKERS ===": "",
  "vibecode.compliance.configVersion": "4.0.0",
  "vibecode.compliance.lastSync": "auto",
  "vibecode.compliance.mandatory": true,
  "vibecode.compliance.crossEnvironment": true,
  "vibecode.compliance.masterRuleCompliance": true,

  "// === FINAL VALIDATION ===": "",
  "vibecode.system.status": "UNIFIED_OPERATIONAL",
  "vibecode.system.environment": "vscode-primary",
  "vibecode.system.cursorSync": "enabled",
  "vibecode.system.memoryBankIntegration": "active"
}
