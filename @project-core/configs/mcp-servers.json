{
  "mcpServers": {
    "sequential-thinking": {
      "priority": 2,
      "command": "npx",
      "name": "Sequential Thinking MCP",
      "description": "Advanced reasoning and problem decomposition",
      "env": {
        "NODE_ENV": "production",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      },
      "args": [
        "-y",
        "--package=sequential-thinking-mcp",
        "sequential-thinking-mcp"
      ],
      "enabled": true,
      "capabilities": [
        "problem-decomposition",
        "structured-analysis",
        "context-preservation",
        "multi-phase-coordination"
      ]
    },
    "mcp-shrimp-task-manager": {
      "priority": 3,
      "command": "npx",
      "name": "MCP Shrimp Task Manager",
      "description": "Advanced task coordination and management with GRUPO US integration",
      "env": {
        "NODE_ENV": "production",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}"
      },
      "args": ["-y", "mcp-shrimp-task-manager"],
      "enabled": true,
      "capabilities": [
        "task-coordination",
        "project-management",
        "workflow-automation",
        "cross-environment-handoff"
      ]
    },
    "playwright-mcp": {
      "priority": 4,
      "command": "npx",
      "name": "Playwright MCP",
      "description": "UI testing and browser automation",
      "env": {
        "NODE_ENV": "production",
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      },
      "args": ["-y", "playwright-mcp"],
      "enabled": true,
      "capabilities": [
        "ui-testing",
        "browser-automation",
        "visual-testing",
        "performance-testing"
      ]
    },
    "figma-mcp": {
      "priority": 5,
      "command": "npx",
      "name": "Figma MCP",
      "description": "Design-to-code generation and component creation",
      "env": {
        "NODE_ENV": "production",
        "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}"
      },
      "args": ["-y", "figma-mcp"],
      "enabled": true,
      "capabilities": [
        "design-to-code",
        "component-generation",
        "style-extraction",
        "design-sync"
      ]
    },
    "upstash-mcp": {
      "priority": 6,
      "command": "npx",
      "name": "Upstash MCP",
      "description": "Redis-based context management and database operations for Enhanced Memory System V4.0",
      "env": {
        "NODE_ENV": "production",
        "UPSTASH_EMAIL": "${UPSTASH_EMAIL}",
        "UPSTASH_API_KEY": "${UPSTASH_API_KEY}"
      },
      "args": [
        "-y",
        "@upstash/mcp-server",
        "run",
        "${UPSTASH_EMAIL}",
        "${UPSTASH_API_KEY}"
      ],
      "enabled": true,
      "capabilities": [
        "redis-context-management",
        "database-operations",
        "backup-management",
        "performance-monitoring",
        "hybrid-memory-system"
      ]
    }
  },
  "security": {
    "apiKeyManagement": {
      "rotation": true,
      "validation": true,
      "encryption": true,
      "description": "API key security settings - Keys stored in environment variables"
    },
    "accessControl": {
      "restrictedCommands": [],
      "allowedPaths": ["@project-core", "scripts", "docs"]
    }
  },
  "metadata": {
    "version": "4.0.0",
    "name": "MCP Servers Unified Configuration",
    "lastUpdated": "2025-01-11",
    "description": "Centralized MCP server configurations for GRUPO US VIBECODE SYSTEM V4.0 with Upstash Context Integration",
    "author": "Augment Agent - Self-Improving Learning System"
  }
}
